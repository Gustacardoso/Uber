<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="match_parent"
    android:background="@drawable/fundo"
    tools:context=".activity.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="175dp"
        android:layout_height="183dp"


        android:layout_alignParentStart="true"

        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="119dp"
        android:layout_marginLeft="119dp"
        android:layout_marginTop="107dp"
        android:layout_marginEnd="117dp"
        android:layout_marginRight="117dp"
        android:layout_marginBottom="235dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <LinearLayout
        android:layout_width="379dp"
        android:layout_height="255dp"

        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-33dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="126dp"
            android:layout_height="60dp"
            android:layout_marginVertical="@android:dimen/notification_large_icon_height"
            android:layout_marginLeft="@android:dimen/notification_large_icon_height"
            android:background="@color/bt_entrar"
            android:onClick="bt_login"
            android:text="Entrar"
            android:textColor="@android:color/white" />

        <Button
            android:layout_width="116dp"
            android:layout_height="60dp"
            android:layout_marginVertical="@android:dimen/notification_large_icon_height"
            android:background="@color/bt_cadastrar"
            android:onClick="bt_cadastro"
            android:text="Cadastrar"
            android:textColor="@android:color/white" />

    </LinearLayout>

</RelativeLayout>